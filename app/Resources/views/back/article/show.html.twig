{% extends '::base_back.html.twig' %}

{% block content %}

    <a href="{{ path('back_article_index') }}" class="btn btn-info"><i class="fa fa-undo" aria-hidden="true"></i> Return</a>

    <div class="block-article">
        <div class="article">
            <h4 class="text-info"><b>{{ article.title }}</b></h4>
            <p>{{ article.content }}</p>
            <span class="text-info">By {{ article.author }}</span>
            <span class="pull-right text-info">Posted the {{ article.date.date|date('F  j  Y, H\\h i\\m') }}</span>
        </div>
    </div>

{% endblock %}

