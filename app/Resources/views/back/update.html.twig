{% extends 'base.html.twig' %}

{% block content %}
    <h1>Vous êtes entrain d'editer le contact numéro : {{ contact.id }}</h1>
    <div class="well" style="width: 50%;margin:auto;">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.title, "Title", {'label_attr': {'class': 'col-sm-2 control-label text-info'} }) }}
            <div class="col-sm-10">
                {{ form_widget(form.title, {'attr': {'class': '' } }) }}
            </div>
        </div>
        <div class="alert-danger">
            {{ form_errors(form.title) }}
        </div>
        <div class="form-group">
            {{ form_label(form.firstname, "Firstname", {'label_attr': {'class': 'col-sm-2 control-label text-info'} }) }}
            <div class="col-sm-10">
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="alert-danger">
            {{ form_errors(form.firstname) }}
        </div>
        <div class="form-group">
            {{ form_label(form.lastname, "Lastname", {'label_attr': {'class': 'col-sm-2 control-label text-info'} }) }}
            <div class="col-sm-10">
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="alert-danger">
            {{ form_errors(form.lastname) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-2 control-label text-info'} }) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="alert-danger">
            {{ form_errors(form.email) }}
        </div>
        <div class="form-group">
            {{ form_label(form.object, "Object", {'label_attr': {'class': 'col-sm-2 control-label text-info'} }) }}
            <div class="col-sm-10">
                {{ form_widget(form.object, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="alert-danger">
            {{ form_errors(form.object) }}
        </div>
        <div class="form-group">
            {{ form_label(form.message, "Message", {'label_attr': {'class': 'col-sm-2 control-label text-info'} }) }}
            <div class="col-sm-10">
                {{ form_widget(form.message, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="alert-danger">
            {{ form_errors(form.message) }}
        </div>
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'} }) }}
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
