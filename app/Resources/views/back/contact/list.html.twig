{% extends 'base.html.twig' %}

{% block content %}
    <table border=1 style="text-align: center;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Object</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.title }}</td>
                    <td>{{ contact.firstname }}</td>
                    <td>{{ contact.lastname }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.object }}</td>
                    <td>{{ contact.message }}</td>
                    <td><a class="btn btn-info" href="show/{{ contact.id }}">Show</a> <a class="btn btn-info" href="update/{{ contact.id }}">Update</a> <a class="btn btn-info" href="delete/{{ contact.id }}">Delete</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}