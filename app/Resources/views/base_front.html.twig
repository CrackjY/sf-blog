<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}SF-BLOG !{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('libs/bootstrap/css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('libs/font-awesome/css/font-awesome.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/search.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            <div class="wrapper">
                <div class="container">
                    <header>
                        {% block header %}
                            {% block menu %}
                                {#{% include ':front/includes:menu_front.html.twig' %}#}
                                {{ render(controller('AppBundle:Front/Front:menu')) }}
                            {% endblock %}
                        {% endblock %}
                    </header>
                    <main class="front">
                        {% block content %}
                        {% endblock %}
                    </main>
                    <footer>
                        {% block footer %}
                            {#<p>Â© Yassine Latti - 2017</p>#}
                        {% endblock %}
                    </footer>
                </div>
            </div>
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('libs/jquery/jquery-3.2.1.min.js') }}"></script>
            <script src="{{ asset('libs/bootstrap/js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/search.js') }}"></script>
        {% endblock %}
    </body>
</html>
