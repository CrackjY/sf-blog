{% extends 'base_front.html.twig' %}

{% block content %}
	<div class="block-all-articles">
		<div class="menu-category">
		{{ form_start(form) }}
			{{ form_errors(form) }}
			<div class="form-group">
                {{ form_label(form.categories) }}
				{{ form_widget(form.categories, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_rest(form) }}
                {{ form_end(form) }}
			</div>
		</div>
		<div class="block-article">
            {% for article in articles %}
				<div class="row article">
					<header class="">
						<a href="#">
							<h2>{{ article.title }}</h2>
						</a>
					</header>
					<div class="">
						<p class="">{{ article.content }}</p>
					</div>
					<div class="">
						<a id="article-id" href="article/{{ article.id }}" class="pull-left btn btn-info input-post-article">Show</a>
					</div>
					<div class="">
						<p class="pull-right text-info">Posted the {{  article.date.date|date('F  j  Y, H\\h i\\m') }}</p>
					</div>
					<div class="">
						<p class="pull-left text-info">By {{ article.author }}</p>
					</div>
				</div>
            {% endfor %}
		</div>
	</div>
{% endblock %}