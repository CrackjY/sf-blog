{% extends '::base_front.html.twig' %}

{% block content %}

	{{ render(controller('AppBundle:Front/Front:search')) }}

	<div class="row">
		<div id="block-article" class="col-md-9">

            {% for article in articles %}

				<div class="article">
					<div class="">
						<a id="article-id" href="{{ path('front_article_show', { 'articleId': article.id }) }}" class="pull-right btn btn-info">Show</a>
					</div>
					<header class="">
						<h2>{{ article.title }}</h2>
					</header>
					<div class="">
						<p class="">{{ article.content }}</p>
					</div>
					<div class="">
						<p class="">Posted the {{  article.date|date('F  j  Y, H\\h i\\m') }}</p>
					</div>
					<div class="">
						<p class="">By {{ article.author }}</p>
					</div>
				</div>

            {% endfor %}

		</div>
		<div class="col-md-3">
			<h3 class="title-recent-article text-info">Recent Articles</h3>
			<div id="block-recent-article">

                {% for recentArticle in recentArticles %}

					<div class="article">
						<div>
                            <h4 class="text-primary">{{ recentArticle.title }}</h4>
						</div>
						<div>
							<p class="">Posted the {{  recentArticle.date|date('F  j  Y, H\\h i\\m') }}</p>
						</div>
						<div class="">
							<a id="recent-article-id" href="{{ path('front_article_show', { 'articleId': recentArticle.id }) }}" class="pull-right btn btn-info">Show</a>
						</div>
						<div class="">
							<p class="">By {{ recentArticle.author }}</p>
						</div>
					</div>

                {% endfor %}

			</div>
		</div>
	</div>

{% endblock %}