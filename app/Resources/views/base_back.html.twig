<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}ADMIN !{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('libs/bootstrap/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('libs/bootstrap-toggle-master/css/bootstrap-toggle.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('libs/font-awesome/css/font-awesome.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="wrapper">
                <div class="container">
                    <header>
                        {% block header %}
                            <nav>
                                {% block menu %}
                                    {% include ':back/includes:menu_back.html.twig' %}
                                {% endblock %}
                            </nav>
                        {% endblock %}
                    </header>
                    <main class="back">
                        {% block content %}
                        {% endblock %}
                    </main>
                    <footer>
                        {% block footer %}
                            <p>Â© Yassine Latti - 2017</p>
                        {% endblock %}
                    </footer>
                </div>
            </div>
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('libs/jquery/jquery-3.2.1.min.js') }}"></script>
            <script src="{{ asset('libs/bootstrap-toggle-master/js/bootstrap-toggle.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>